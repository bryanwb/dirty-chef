# /etc/sudoers
# mostly borrowed from Joshua Timberman's code
# Generated by Chef for <%= node[:fqdn] %>


Defaults        !lecture,tty_tickets,!fqdn

# User privilege specification
root          ALL=(ALL) ALL

includedir /etc/sudoers.d

<% @sudoers.each do |user| 
	cmds = user['sudo_cmds')	
	
	cmds.each do |cmd|  -%>
<%= user %> <%= cmd %>	
<%	end 
   end -%>

